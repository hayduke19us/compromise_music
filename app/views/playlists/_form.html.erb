<%= form_tag({controller: "playlists", action: "create"}, 
                 class: "new_playlist_form") %>
  <h4>Name</h4>
  <%= text_field_tag(:name, nil, :placeholder => "Name that playlist!")%>
  <h4>Description</h4>
  <%= text_area_tag(:description, nil, 
                    :placeholder => "Give a brief Description.") %></br>
  <div id="new_playlist_btn">
    <%= submit_tag "Create Playlist", 
                   'class' => 'btn btn-primary btn-large', 
                   'id' => 'new_playlist_btn'%>
  </div>

