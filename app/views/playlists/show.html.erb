<div class="row-fluid">
  <div class="span6 well", id="add_songs">
  		<h2>Search for Songs</h2>
	    <div id= "search_box">
		    <div id=" search_for_stuff_form form-search">
		      <%=form_tag({controller: "playlists", action: "show"}, method: "get",class: "search_for_stuff")%>
		      <h4>Type of Search</h4>
		      <%=select_tag(:type, options_for_select(["Artist", "Album", "Track"]))%>
		      <h4>Search query</h5>
		      <%=text_field_tag :query, nil, :placeholder => "search for Tracks, Artist, or Album"%></br></br>
		      <%=submit_tag "Search", "class" => "btn primary-btn", "id" => "track_search_button"%>
		    </div>
		  </div>
		  <div class="search_results">
        <% unless @search_result.blank? %>
			    <div class="lead"> Search Results</div>
			    <% @search_result.each do |result|%>
            <div class="well song_search">
              <%= link_to result["name"], result["embedUrl"]%>
              <div id="add">
                <%=link_to 'add', tracks_path(:playlist_id => @playlist, :name => "#{result['name']}", :playlist_key => @playlist.key,
                                              :key => "#{result['key']}", :embedUrl => "#{result['embedUrl']}" ), method: "post" %>
              </div></br>
            </div>  
          <%end%>
        <%end%>
		  </div>  
  </div>
  <div class="span6 well", id= "add_songs">
	  <h2 id="new_playlist_name"><%=link_to @playlist.name.capitalize, @playlist.embedUrl%></h2>
	  <% @playlist.tracks.each do |track|%>
	    <div class= "well">
	      <%=link_to track.name, track.embedUrl%></br>
	      <%=link_to "remove", track, method: "delete", :id => track.id %>
	    </div>
	  <%end%>
	  
	
	  
	</div>
</div>

