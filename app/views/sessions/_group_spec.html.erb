<li id = "gp_title">Groups</li>
<div id ="collab_info">
  <% user.groups.each do |group|%>
    <div id= "count">
      <span class= "badge pull-right">
        <%= group.friends.count %>
      </span>
    </div>
    <div id="name_wrapper">
      <li><%= link_to group.name.titleize,  
        sessions_my_group_path(group: group),
        remote: true,
        id: "gp_link" %>
      </li>
    </div>
  <%end%>
  <li id= "create-group">
  <%= link_to "Create Group", "#new-groupModal", "data-toggle"=>"modal", 
    id: "new_gp_link", class: "btn btn-default btn-sm" %>
  </li>
</div>

