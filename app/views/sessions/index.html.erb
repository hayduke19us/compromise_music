<% if @user %>
  <div id="white_top">
    <div class="container" id="top_body">
      <div class="row">
        <div class="col-md-5">
          <div class = "lead" id = "search_description">
           Search for your favorite Artist, Track, or Playlist.
          </div>
          <div id= "playlist_search_form">
            <%= render partial: '/playlists/playlist_search_form', 
              locals: {playlist: @playlist} %>
          </div>
        </div>
        <div class="col-md-6">
          <%= render "graph" %>
        </div>
      </div>
    </div>
  </div>
  <div id="colored_body" id="colored_body">
    <div class="container" id= "bottom_body">
      <div class="row" id="playlist_row">
        <div class = "col-md-2">
          <div id= "playlist_spec_partial">
            <%= sync partial: "playlist_list", resource: @playlist %> 
          </div>
          <div id= "group_spec_partial">
            <%= render partial: "group_spec", locals: {user: current_user}%>
          </div>
          <div id = "fr_title">Friends</div>
          <% current_user.friends.each do |friend| %>
            <li><%= link_to friend.name, "#", id: "fr_name" %></li>
          <%end%>
          <li><%= link_to "New", sessions_my_friend_path, 
                remote: true,
                id: "new_fr_link"%>
          </li>
        </div>
        <div class="col-md-10" id= "playlist_col">
          <div id="js_search"> 
              <% unless @search_results.blank? && @album_tracks.blank?%>
              <%end%>
          </div>
          <div id = "my_playlist_partial">
          </div>
        </div>
      </div>
      <div class = "row" id = "friends_row">
        <div class="col-md-7">
          <% if @user %>
            <div class="panel panel-default" id="friend_panel">
              <div id= new_friend>
                <%= link_to raw("<span class='glyphicon glyphicon-plus'></span>"), 
                  users_path,
                  'class' => 'btn btn-default pull-right' %>
                <h3 id="friends_title">Friends</h3>
              </div>
              <% @user.friends.each do |friend| %>
                <div class="well">
                  <div class="friend_image">
                    <%= image_tag friend.image,
                        'id' => 'friend_image',
                        'class' => 'img-circle'%>
                    <h4 id="friend_name"><%=friend.name.titleize%></h4>
                    <div class="btn-group btn-group-xs">
                      <button type="button" class="btn btn-default"
                        data-toggle="dropdown">
                        add to group <span class="caret"></span>
                      </button>
                      <ul class="dropdown-menu" role="menu">
                        <% for group in current_user.groups %>
                          <li><%= link_to group.name.titleize, groupships_path(
                            group_id: group.id,
                            friend_id: friend.id),
                            :method => :post %> </li>
                        <%end%>
                      </ul>
                    </div>
                  </div>
                </div>
              <%end%>
            </div>
          <%end%>
        </div>
      </div>
      <%= render 'group_member'%>
<%end%>







