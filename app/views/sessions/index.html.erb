  <div class="row">	
    <div class="col-md-6">
      <% if @user %>
        <% unless @user.playlists.count > 0 %>
	        <div class= "well new_playlist">
            <h1><%= link_to "Make your first playlist", 
              new_user_playlist_path(@user) %></h1>
          </div>
        <% else %>
          <div class="well">
            <h4 id= "my">My</h4>
            <h4 id="playlist_list_title">Playlists</h4>
            <h4 id="track_count_title">Tracks</h4>
            <p>
            <%= link_to "Make a new playlist", new_user_playlist_path(@user), 
              'class'=>"btn btn-primary"%>
	          </p>
	          <% @user.playlists.each do |playlist| %>
              <div class="well">
                <h4 id= "playlist_name"><%= link_to playlist.name.titleize, 
                  user_playlist_path(@user, playlist)%></h4>
                <div id="playlist_stats">
                
                  <h4 id="tracks_count">
                    <%=playlist.tracks.count %>
                  </h4>
                </div>
                <li><h6 id= "playlist_description"><%= playlist.description %></h6></li>
                <div class="btn-group">
                  <%= link_to "add to group","#",
                    'class'=>'btn btn-sm btn-default dropdown-toggle',
                    'data-toggle' => 'dropdown',
                    'type'=>'button' %>
                  <ul class="dropdown-menu" role="menu">
                    <%current_user.groups.each do |group|%>
                      <li><%=link_to group.name, "#"%></li>
                    <%end%>  
                  </ul>
                  <%=link_to "edit", "#",
                    'class'=> "btn btn-sm btn-default",
                    'type' => "button" %>               
                  <%=link_to "delete", user_playlist_path(@user, playlist), 
                    method: :delete,  
                    'class' => 'btn btn-sm btn-danger',
                    'type' => 'button',
                    confirm: "Are you sure?"%>   
                </div>
              </div>  
            <%end%>
          </div>  
        <%end%>
      <%end%>
	  </div>
	  <div class="col-md-6">
      <% if @user %>
        <% unless @user.friends.count > 0 %>
	        <div class= "well new_playlist">
		        <h1><%= link_to "Make your first friend", users_path %></h1>
          </div>
        <% else %>
      
          <div class="well">
            <h4 id= "my">My</h4>
            <h4 id="playlist_list_title">Friends</h4>
            <h4 id="track_count_title">Playlists</h4>
            <p><%= link_to "Make a new friend", users_path, 'type' => 'button', 
                           'class' => 'btn btn-primary' %></p>
            <% @user.friends.each do |friend| %>
              <div class="well">
                <%= image_tag friend.image, 'id' => 'friend_image', 
                                            'class' => 'img-circle' %>
                <h4 id="friend_playlist_count"><%= friend.playlists.count%></h4></br>
                <h4 id="friend_name"><%=link_to friend.name.titleize, 
                                                user_friend_path(@user, friend) %>
              </div>  
            <%end%>
          </div>  
        <%end%>
      <%end%>
    </div>
    <div class='col-md-6'
      <% if @user %>
        <%unless @user.groups.count > 0 %>
          <div class="well new_group">
            <h1><%= link_to "Start your first group", "#" %></h1>
          </div>
        <% else %>
        
        <%end%>
      <%end%>
    </div>
  </div>
  
  







