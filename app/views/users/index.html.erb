<div class='row-fluid'> 
	<div class="span1", id="spacer">
	</div>
	<div class="span5", id="all_users">
	  <div class= "well" id="search">
			 <div class="lead">
				  Users
				  <strong><%= @all_user.count%></strong>
				</div>
		  <div class="form-search">
			  <%= form_tag users_path, :method => 'get' do%>
			  <%= text_field_tag :search, params[:search], 'class' => "input-medium search-query" %>
			  <%= submit_tag "Search", :name => nil, 'class' => 'btn', 'id' =>"submit" %>
				<%end%>
		  </div>
		</div>
		<div class="well", id="all_users">
			
        <% @all_user.each do |user| %>
        <div class="well">
		      <h4 id="user"><%= user.name%></h4>
		      <%= link_to 'Add friend', friendships_path(:friend_id => user), :method => :post ,'id' => 'add_friend_link', 'class' => 'btn btn-primary' %></br>
		    </div>
		    <%end%>

		</div>
		<%= link_to 'home', root_path%>
	</div>
	<div class="span5", id="all_friends">
	  <div class="well" id= "search">
		  	<div class="lead">
					Your Friends
				  <strong><%=current_user.friendships.count 'id' => 'friends_count'%></strong>
				</div>
			 <div class="form-search">
				  <%= form_tag users_path, :method => 'get' do%>
				  <%= text_field_tag :search, params[:search], 'class' => "input-medium search-query" %>
				  <%= submit_tag "Search", :name => nil, 'class' => 'btn', 'id' =>"submit" %>
					<%end%>
			 </div>
		</div>
		<div class="w	ell" id="all_friends" >
			
	    <%for friendship in current_user.friendships %>
	    <div class='well'>
	    <h4 id='user'><%=h friendship.friend.name %></h4>
	    <%=link_to 'Remove friend', friendship, :method => :delete, 'id' => 'remove_friend_link', 'class' => 'btn btn-danger' %></br>
	    </div>
	    <%end%>
	  </div>
	</div>
</div>	
