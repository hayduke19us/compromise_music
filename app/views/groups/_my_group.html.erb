<div id = "group_wrapper">
  <div id = "gr_name"><h2><%= group.name.titleize%></h2></div>
  <div class = "pull-right" id = "gp_members">
    <div id = "members_header">
      <span class= "pull-right badge"><%= group.friends.count%></span>
      <span id = "members_glyph" class = "glyphicon glyphicon-user"></span>
    </div>
    <% group.friends.each do |member|%>
      <% group.groupships.each do |groupship|%>
        <li id = "member_name"><%= member.name.titleize %></li>
        <%= link_to "remove",
          groupship_path(groupship, group_id: group),
          remote: true,
          method: :delete,
          class: "btn btn-xs btn-default",
          data: {confirm: "are you sure"}%>
      <%end%>
    <% end %>
  </div>
  <div id = "gp_playlists">
    <% group.playlists.each do |playlist| %>
      <% group.grouplists.each do |grouplist| %>
      <div class = "pull-left">
        <li><%= playlist.name.titleize %></li>
      </div>
      <%=link_to raw("<span id = 'pl_remove_glyph' 
        class = 'glyphicon glyphicon-remove'></span>"),
      grouplist,
      method: :delete,
      remote: true %>
      <%end%>
    <%end%>
  </div>
</div>
